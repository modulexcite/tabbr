{
  "manifest_version": 2,

  "name": "tabbr",

  "icons":
  {
    "16": "favicon.png",
    "128": "icon128.png"
  },

  "description": "tabbr is a search engine for easier tab navigation, kind of like spotlight for tabs.",

  "version": "0.0.0.7",

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.png"
  },

  "background": {
    "scripts": [
      "js/underscore.js",
      "js/lexicon.js",
      "js/lexer.js",
      "js/POSTagger.js",
      "js/inflection.js",
      "js/glossary.js",
      "js/jquery.js",
      "js/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"]
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "commands": {
    "_execute_browser_action": {
       "suggested_key": {
         "default": "Alt+T",
         "mac": "MacCtrl+T"
       }
     }
  }
}
